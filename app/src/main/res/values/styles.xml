<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNavTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimary</item> <!-- Optional: Custom text color -->
    </style>
    <style name="CustomBottomNavTextAppearanceInactive" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#797979</item> <!-- Optional: Custom text color -->
    </style>

    <style name="CustomBottomNavigationStyle" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item>
        <item name="itemPaddingTop">0dp</item>
        <item name="itemPaddingBottom">0dp</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.AppCompat.Caption</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.AppCompat.Caption</item>
        <item name="background">@style/bottomNavStyle</item>
    </style>


</resources>