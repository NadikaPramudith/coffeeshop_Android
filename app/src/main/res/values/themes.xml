<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Coffeeshop" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:textColor">@color/black</item>
        <item name="materialButtonStyle">@style/CustomButtonStyle</item>
    </style>

    <style name="frameLayoutBg">
        <item name="android:background">@color/colorSecondary</item>
    </style>

    <style name="textInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>

    </style>

    <style name="CustomButtonStyle" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>
    <style name="CustomButtonStyle2" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">#00FFFFFF</item>
    </style>
    <style name="CustomButtonStyle3" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="bgOpacity">
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="CustomCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
    <style name="CustomCardStyleSP" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/colorPrimary</item>
    </style>
    <style name="CardTextStyle">
        <item name="android:textColor">@color/black</item> <!-- Blue -->
    </style>
    <style name="bottomNavStyle">
        <item name="android:background">@color/white</item>
    </style>
    <style name="iconColorStyle">
        <item name="android:backgroundTint">@color/black</item>
    </style>
</resources>